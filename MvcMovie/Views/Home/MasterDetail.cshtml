@{
    ViewData["Title"] = "Master Detail";
}

@(Html.DevExtreme().DataGrid<MovieDTO>()
    .ColumnWidth(300)
    .Columns(columns =>
    {
        columns.AddFor(m => m.Id);
        columns.AddFor(m => m.Title);
        columns.AddFor(m => m.ReleaseDate);
        columns.AddFor(m => m.Genre);
        columns.AddFor(m => m.Price);
        columns.AddFor(m => m.Rating);
        columns.AddFor(m => m.LocalizationName);
        columns.AddFor(m => m.OrganizationName);
        columns.AddFor(m => m.GroupName);
    })
    .DataSource(ds => ds.Mvc()
        .Controller("MoviesDE")
        .Key("Id")
        .LoadAction("Get"))
    .FilterRow(fr => fr.Visible(true))
    .HeaderFilter(f => f.Visible(true).AllowSearch(true))
    .MasterDetail(md => md
        .Enabled(true)
        .Template(@<text>
            @(Html.DevExtreme().DataGrid()
                .DataSource(ds => ds.Mvc()
                    .Controller("AdditionalDE")
                    .LoadAction("GetById")
                    .LoadParams(new { id = new JS("key") })
                )
            )
        </text>)
    )
    .Pager(p => p.ShowInfo(true))
    .Paging(p => p.PageSize(10))
    .RemoteOperations(true)
)